<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<servlet>
		<servlet-name>JSPDispatcherServlet</servlet-name>
		<servlet-class>com.apress.tddbook.servlets.JSPDispatcherServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PlayerPickServlet</servlet-name>
		<servlet-class>com.apress.tddbook.servlets.PlayerPickServlet</servlet-class>
		<init-param>
			<param-name>
                dbLocation
            </param-name>
			<param-value>
                jdbc:hsqldb:hsql://localhost
            </param-value>
		</init-param>
		<init-param>
			<param-name>
                dbUser
            </param-name>
			<param-value>
                sa
            </param-value>
		</init-param>
		<init-param>
			<param-name>
                dbPass
            </param-name>
			<param-value/>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>HomePageServlet</servlet-name>
		<servlet-class>com.apress.tddbook.servlet.HomePageServlet</servlet-class>
		<init-param>
			<param-name>
                dbLocation
            </param-name>
			<param-value>
                jdbc:hsqldb:hsql://localhost
            </param-value>
		</init-param>
		<init-param>
			<param-name>
                dbUser
            </param-name>
			<param-value>
                sa
            </param-value>
		</init-param>
		<init-param>
			<param-name>
                dbPass
            </param-name>
			<param-value/>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>HomePageServlet</servlet-name>
		<url-pattern>/HomePageServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>JSPDispatcherServlet</servlet-name>
		<url-pattern>/JSPDispatcherServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PlayerPickServlet</servlet-name>
		<url-pattern>/PlayerServlet</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
